{% extends 'security/base.html.twig' %}

{% block body %}
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"
                     style="background: url({{ asset('build/images/register-1280x853.jpg') }}); background-position: center; background-size: cover; "></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Créer un nouveau compte</h1>
                        </div>
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">
                                {{ flashError }}
                            </div>
                        {% endfor %}
                        {{ form_start(registrationForm, {
                            'action': path('app.register'),
                            'method': 'POST',
                            'attr': {
                                'class': 'user'
                            }
                        }) }}
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                {{ form_widget(registrationForm.firstname, {
                                    'attr': {
                                        'placeholder': 'Prénom',
                                        'class': 'form-control form-control-user'
                                    }
                                }) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_widget(registrationForm.lastname, {
                                    'attr': {
                                        'placeholder': 'Nom',
                                        'class': 'form-control form-control-user'
                                    }
                                }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'placeholder': 'Adresse e-mail',
                                    'class': 'form-control form-control-user'
                                }
                            }) }}
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                {{ form_widget(registrationForm.plainPassword, {
                                    'attr': {
                                        'placeholder': 'Mot de passe',
                                        'class': 'form-control form-control-user'
                                    }
                                }) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_widget(registrationForm.plainPassword2, {
                                    'attr': {
                                        'placeholder': 'Confirmation du mot de passe',
                                        'class': 'form-control form-control-user'
                                    }
                                }) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-user btn-block">Enregistrer mon compte</button>

                        {{ form_end(registrationForm) }}
                        <hr>
                        <div class="text-center">
                            <a class="small" href="{{ path('app.login') }}">Déjà enregistré ? Se connecter !</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
